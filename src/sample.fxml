<?import javafx.geometry.Insets?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.121"
            fx:controller="Controller">
    <top>
        <Label text="9x9" style="-fx-text-fill: white; -fx-border-color: lime" BorderPane.alignment="CENTER"/>
    </top>
    <center>
        <Canvas fx:id="canvas" height="500.0" width="500.0" layoutX="14.0" layoutY="15.0" />
    </center>
    <bottom>
        <HBox spacing="10" alignment="CENTER">
            <BorderPane.margin>
                <Insets top="5"/>
            </BorderPane.margin>
            <Button text="Solve" fx:id="solve"/>
            <Button text="Read File" fx:id="readFile"/>
            <Button text="Generate Random" fx:id="random"/>
            <BorderPane.margin>
                <Insets bottom="10"/>
            </BorderPane.margin>
        </HBox>
    </bottom>
</BorderPane>